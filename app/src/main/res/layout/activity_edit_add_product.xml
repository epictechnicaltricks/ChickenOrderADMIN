<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".All_settings.EditAddProduct">

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="19sp"
            android:text="Enter Item name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:maxLines="3"
            android:layout_margin="5dp"

            android:id="@+id/name"
            android:textSize="19sp"
            android:textColorHint="#bdbdbd"
            android:hint="Product name e.g. Chicken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>



        <TextView


            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="19sp"
            android:text="Enter Price (per Kg)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:maxLines="1"
            android:layout_margin="5dp"
            android:textSize="19sp"
            android:id="@+id/price"

            android:digits="0123456789"
            android:inputType="numberSigned"
            android:textColorHint="#bdbdbd"
            android:hint="Price e.g. 240"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="19sp"
            android:text="Product Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_margin="5dp"
            android:textSize="19sp"
            android:id="@+id/desc"
            android:maxLines="5"

            android:textColorHint="#bdbdbd"
            android:hint="Description e.g. Chicken boneless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>




        <Button

            android:layout_margin="20dp"
            android:id="@+id/add"
            android:text="ADD ITEM"
            android:padding="8dp"
            android:textSize="19sp"
            android:textColor="#fff"
            android:backgroundTint="#009649"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>


        <Button
            android:layout_margin="20dp"
            android:id="@+id/update"
            android:text="UPDATE ITEM"
            android:padding="8dp"
            android:textSize="19sp"
            android:textColor="#fff"
            android:backgroundTint="#FF5722"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>

        <Button

            android:id="@+id/close"
            android:text="CLOSE, GO BACK"
            android:padding="8dp"
            android:textSize="19sp"
            android:textColor="#fff"
            android:backgroundTint="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>


    </LinearLayout>



</LinearLayout>